.sidebar        
	.sidebar-section   
		min-height 25px  
		flex 1
		position relative
		.title  
			min-height 25px
			color white   
			background -webkit-gradient(linear,left bottom,left top,color-stop(0,rgba(31,31,31,0.64)),color-stop(1,#2e2e2e))
			background -moz-linear-gradient(top,#2e2e2e 0%,rgba(31,31,31,0.64) 100%)
			background -o-linear-gradient(top,#2e2e2e 0%,rgba(31,31,31,0.64) 100%)
			background -ms-linear-gradient(top,#2e2e2e 0%,rgba(31,31,31,0.64) 100%)
			border-bottom 1px solid #333
			border-top 1px solid #333
			box-shadow 0 0 1px black
			padding 5px 
			height 33px  
			i
				width 23px
				padding-left 3px 
.right-sidebar
	order 3
	.sidebar-section:last-child
		flex-grow 2
.left-sidebar
	.sidebar-section:first-child
		flex-grow 2