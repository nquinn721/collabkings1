.container
	background #eee
	height 100%
	display flex
	flex-direction column
	
	>.header
		background #222
		min-height 75px 
		border-bottom 1px solid #333 
	>.content
		background #777
		height 100%
		display flex
		border-top 1px solid black
		
		.sidebar
			background #222
			min-width 300px
			border-left 1px solid black
			border-right 1px solid black
			display flex
			flex-flow column wrap
		.editor-area
			background #272822
			width 100%
			border-left 1px solid #333
			border-right 1px solid #333
