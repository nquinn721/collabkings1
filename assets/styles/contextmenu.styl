.context-menu 
    position absolute
    background-color #333
    z-index 1
    margin-left 25px
    width 150px
    font-size 13px
    box-shadow 0 0 6px 1px black
 
	.context-menu-item 
		padding 6px 10px
		cursor pointer
		&:hover 
			background-color #8CECD6
			color black
		i 
			width 30px
			padding-left 5px
			font-size 12px
		&.clicked
			background #1F9AD0
	.divider 
		border-top 1px solid #222
		width 94%
		margin-left 3%
		background-color none
		border-bottom 1px solid rgb(61, 61, 61)
			
		
